generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  languageCode String @id
  localeCode   String
  currencyCode String

  // Отношение к ProductDescription
  descriptions ProductDescription[]
}

model Product {
  id   Int    @id @default(autoincrement())
  name String @unique // Уникальное название продукта, например "Rally Bar"

  // Отношения к ProductDescription
  descriptions ProductDescription[]
}

model ProductDescription {
  id           Int    @id @default(autoincrement())
  productId    Int // Внешний ключ для Product
  languageCode String // Внешний ключ для Language
  description  Json // Содержит JSON с описанием продукта на конкретном языке

  product  Product  @relation(fields: [productId], references: [id])
  language Language @relation(fields: [languageCode], references: [languageCode])
}
